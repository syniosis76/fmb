#:kivy 1.0

<ImageView>:
	GridLayout:
		cols: 1		
		GridLayout:
			id: imageGrid
			cols: 1
			size_hint_y: 1.0			
	FloatLayout:
		id: overlay
		cols: 2				
		size_hint: 1.0, 1.0					
		opacity: 0
		Image:			
			id: backButton			
			pos: 6, root.height - 36
			size_hint: None, None
			size: '30sp', '30sp'
			source: 'images\\arrow-left.png'		
		Image:			
			id: previousButton			
			pos: root.width - 72, root.height - 36
			size_hint: None, None
			size: '30sp', '30sp'
			source: 'images\\arrow-left.png'
		Image:			
			id: nextButton			
			pos: root.width - 36, root.height - 36
			size_hint: None, None
			size: '30sp', '30sp'
			source: 'images\\arrow-right.png'