#:kivy 2.2.0

<Button>:
  background_normal: 'images\\button.png'
  background_down: 'images\\button-down.png'
  border: (2, 2, 2, 2)        

<thumbnail_view>:
  BoxLayout:    
    BoxLayout:
      orientation: 'vertical'
      padding: (0, 2, 2, 2)
      canvas:
        Color:
          rgba: 0.145, 0.145, 0.149, 1.0
        Rectangle:
          pos: self.pos
          size: self.size      
      id: folderBox
      size_hint_x: None
      width: 200
      GridLayout:
        cols: 2    
        size_hint_y: None
        height: 30
        Button:
          text: 'Home'
          on_press: root.open_home_folder_click()          
        Button:
          text: 'Up'
          on_press: root.open_parent_folder_click()
      BoxLayout:        
        size_hint_x: 1
        ScrollView:          
          size_hint_x: 1.0
          size_hint_y: 1.0
          do_scroll_x: False
          scroll_wheel_distance: 30
          scroll_type: ['bars']
          GridLayout:
            id: folderGrid
            cols: 1
            size_hint_x: 1.0
            size_hint_y: None
    BoxLayout:      
      size_hint_x: 1
      ScrollView:        
        size_hint_x: 1.0
        size_hint_y: 1.0
        do_scroll_x: False
        scroll_wheel_distance: 90
        scroll_type: ['bars']
        DraggableGridLayout:
          id: thumbnailGrid
          drag_classes: ['thumbnail_layout']
          cols: 1
          on_drag_complete: root.on_drag_complete()
        
        