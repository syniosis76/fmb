#:kivy 1.11.1

<Button>:
  background_normal: 'images\\button.png'
  background_down: 'images\\button-down.png'
  border: (2, 2, 2, 2)        

<ThumbnailView>:
  BoxLayout:    
    BoxLayout:
      orientation: 'vertical'
      padding: (0, 2, 2, 2)
      canvas:
        Color:
          rgba: 0.145, 0.145, 0.149, 1.0
        Rectangle:
          pos: self.pos
          size: self.size      
      id: folderBox
      size_hint_x: None
      width: '200sp'
      GridLayout:
        cols: 2    
        size_hint_y: None
        height: '30sp'
        Button:
          text: 'Home'
          on_press: root.openHomeFolderClick()          
        Button:
          text: 'Up'
          on_press: root.openParentFolderClick()
      BoxLayout:        
        size_hint_x: 1
        ScrollView:          
          size_hint_x: 1.0
          size_hint_y: 1.0
          do_scroll_x: False
          scroll_wheel_distance: '30sp'
          scroll_type: ['bars']
          GridLayout:
            id: folderGrid
            cols: 1
    BoxLayout:      
      size_hint_x: 1
      ScrollView:        
        size_hint_x: 1.0
        size_hint_y: 1.0
        do_scroll_x: False
        scroll_wheel_distance: '90sp'
        scroll_type: ['bars']
        DraggableGridLayout:
          id: thumbnailGrid
          drag_classes: ['thumbnailLayout']
          cols: 1
        
        