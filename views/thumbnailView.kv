#:kivy 1.11.1

<ThumbnailView>:
  BoxLayout:    
    BoxLayout:
      orientation: 'vertical'
      canvas:
        Color:
          rgba: 0.145, 0.145, 0.149, 1.0
        Rectangle:
          pos: self.pos
          size: self.size      
      id: folderBox
      size_hint_x: None
      width: '200sp'      
      Button:
        text: 'Open Folder'
        on_press: root.openRootFolderClick()
        size_hint_y: None
        height: '30sp'
      BoxLayout:        
        size_hint_x: 1
        ScrollView:          
          size_hint_x: 1.0
          size_hint_y: 1.0
          do_scroll_x: False
          scroll_wheel_distance: '30sp'
          scroll_type: ['bars']
          GridLayout:
            id: folderGrid
            cols: 1
    BoxLayout:      
      size_hint_x: 1
      ScrollView:        
        size_hint_x: 1.0
        size_hint_y: 1.0
        do_scroll_x: False
        scroll_wheel_distance: '90sp'
        scroll_type: ['bars']
        DraggableGridLayout:
          id: thumbnailGrid
          drag_classes: ['thumbnailLayout']
          cols: 1
        
        