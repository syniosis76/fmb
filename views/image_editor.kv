#:kivy 1.0
<image_editor>:  
  BoxLayout:    
    BoxLayout:      
      size_hint_x: 1
      size_hint_y: 1
      padding: (10, 10, 10, 10)
      BoxLayout:
        id: image_editor_box      
        size_hint_x: 1
        size_hint_y: 1          
    FloatLayout:      
      #:set button_spacing 8.333
      #:set button_size 30
      id: tools_box      
      orientation: 'vertical'
      size_hint_x: None      
      width: 200
      padding: (0, 2, 2, 2)
      canvas:
        Color:
          rgba: 0.145, 0.145, 0.149, 1.0
        Rectangle:
          pos: self.pos
          size: self.size
      Button:			
        id: back_button			
        pos: 6, root.height - 36
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\arrow-left.png'
        background_down: 'images\\rotate-left.png'
        border: (2, 2, 2, 2)
        on_press: root.go_back()
      Button:            
        id: rotate_left_button        
        pos: self.parent.pos[0] + button_spacing + ((button_size + button_spacing) * 0), root.height - ((button_spacing + button_size) * 1)
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\rotate-left.png'
        background_down: 'images\\rotate-left.png'
        border: (2, 2, 2, 2)
        on_press: root.adjust_rotation(-0.2)        
      Button:            
        id: move_up_button        
        pos: self.parent.pos[0] + button_spacing + ((button_size + button_spacing) * 1), root.height - ((button_spacing + button_size) * 1)
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\arrow-up.png'
        background_down: 'images\\arrow-up.png'
        border: (2, 2, 2, 2)
        on_press: root.adjust_position((0, -1))
      Button:            
        id: rotate_right_button        
        pos: self.parent.pos[0] + button_spacing + ((button_size + button_spacing) * 2), root.height - ((button_spacing + button_size) * 1)
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\rotate-right.png'
        background_down: 'images\\rotate-right.png'
        border: (2, 2, 2, 2)
        on_press: root.adjust_rotation(0.2)      
      Button:            
        id: move_left_button        
        pos: self.parent.pos[0] + button_spacing + ((button_size + button_spacing) * 0), root.height - ((button_spacing + button_size) * 2)
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\arrow-left.png'
        background_down: 'images\\arrow-left.png'
        border: (2, 2, 2, 2)
        on_press: root.adjust_position((-1, 0))
      Button:            
        id: move_down_button        
        pos: self.parent.pos[0] + button_spacing + ((button_size + button_spacing) * 1), root.height - ((button_spacing + button_size) * 2)
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\arrow-down.png'
        background_down: 'images\\arrow-down.png'
        border: (2, 2, 2, 2)
        on_press: root.adjust_position((0, 1))
      Button:            
        id: move_right_button        
        pos: self.parent.pos[0] + button_spacing + ((button_size + button_spacing) * 2), root.height - ((button_spacing + button_size) * 2)
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\arrow-right.png'
        background_down: 'images\\arrow-right.png'
        border: (2, 2, 2, 2)
        on_press: root.adjust_position((1, 0))
      Button:            
        id: zoom_in_button        
        pos: self.parent.pos[0] + button_spacing + ((button_size + button_spacing) * 4), root.height - ((button_spacing + button_size) * 1)
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\zoom-in.png'
        background_down: 'images\\zoom-in.png'
        border: (2, 2, 2, 2)
        on_press: root.adjust_zoom(-0.01)            
      Button:            
        id: zoom_out_button        
        pos: self.parent.pos[0] + button_spacing + ((button_size + button_spacing) * 4), root.height - ((button_spacing + button_size) * 2)
        size_hint: None, None
        size: button_size, button_size
        background_normal: 'images\\zoom-out.png'
        background_down: 'images\\zoom-out.png'
        border: (2, 2, 2, 2)
        on_press: root.adjust_zoom(0.01)
      Slider:
        id: brightness_slider
        pos: self.parent.pos[0] + button_spacing, root.height - ((button_spacing + button_size) * 3)
        size_hint: None, None
        size: self.parent.size[0] - (button_spacing * 2), button_size
        value_track_width: 1
        min: -100
        max: 100
        step: 1
        orientation: 'horizontal'
        on_value: root.set_brightness(self.value / 100)      
      Slider:
        id: contrast_slider
        pos: self.parent.pos[0] + button_spacing, root.height - ((button_spacing + button_size) * 4)
        size_hint: None, None
        size: self.parent.size[0] - (button_spacing * 2), button_size
        value_track_width: 1
        min: -100
        max: 100
        step: 1
        orientation: 'horizontal'
        on_value: root.set_contrast(self.value / 100)
      Slider:
        id: saturation_slider
        pos: self.parent.pos[0] + button_spacing, root.height - ((button_spacing + button_size) * 5)
        size_hint: None, None
        size: self.parent.size[0] - (button_spacing * 2), button_size
        value_track_width: 1
        min: -100
        max: 100
        step: 1
        orientation: 'horizontal'
        on_value: root.set_saturation(self.value / 100)
      Slider:
        id: gamma_slider
        pos: self.parent.pos[0] + button_spacing, root.height - ((button_spacing + button_size) * 6)
        size_hint: None, None
        size: self.parent.size[0] - (button_spacing * 2), button_size
        value_track_width: 1
        min: -100
        max: 100
        step: 1
        orientation: 'horizontal'
        on_value: root.set_gamma(self.value / 100)
      Button:
        id: save_button
        text: 'Save'
        pos: self.parent.pos[0] + button_spacing, root.height - ((button_spacing + button_size) * 7)
        size_hint: None, None
        size: self.parent.size[0] - (button_spacing * 2), button_size
        on_press: root.save()
